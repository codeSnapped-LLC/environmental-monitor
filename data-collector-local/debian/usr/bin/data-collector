#!/bin/bash

# Source environment variables
if [ -f /etc/default/data-collector-heavy ]; then
    . /etc/default/data-collector-heavy
fi

# Run with production settings
cd /opt/data-collector-heavy
exec gunicorn server:app \
    --workers 4 \
    --worker-class uvicorn.workers.UvicornWorker \
    --bind 0.0.0.0:8000 \
    --timeout 120 \
    --access-logfile - \
    --error-logfile -
